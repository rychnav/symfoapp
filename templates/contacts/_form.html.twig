{%- block contacts_type -%}
    {% from 'parts/forms/_controls.html.twig' import submit_button %}

    {{- form_start(form) -}}
        {{- form_row(form.name) -}}
        {{- form_row(form.email) -}}
        {{- form_row(form.subject) -}}
        {{- form_row(form.message) -}}
        {{- form_row(form.captcha) -}}

        {{- submit_button({'icon_id': 'send', 'submit_text': submit_text}) -}}

        {{- form_rest(form) -}}
    {{- form_end(form) -}}
{%- endblock contacts_type -%}
