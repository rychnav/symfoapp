<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{%- block title -%}{{ "Welcome"|trans }}!{%- endblock title -%}</title>

        {{- block('favicons', '/parts/icons/_favicons.html.twig') -}}

        {%- block stylesheets -%}
            {{ encore_entry_link_tags('app') }}
        {%- endblock stylesheets -%}

        {%- block javascripts -%}
            {{ encore_entry_script_tags('app') }}
        {%- endblock javascripts -%}
    </head>

    <body>
        {%- block body -%}
            {%- block top_nav -%}{{- block('top_nav', '/parts/navs/_navbar.html.twig') -}}{%- endblock top_nav -%}

            {%- block content -%}{%- endblock content -%}

            {%- block footer -%}{{- block('footer', '/parts/navs/_footer.html.twig') -}}{%- endblock footer -%}
        {%- endblock body -%}
    </body>
</html>
